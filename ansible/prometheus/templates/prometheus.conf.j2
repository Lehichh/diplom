global:
  scrape_interval:     15s # By default, scrape targets every 15 seconds.

  # Attach these labels to any time series or alerts when communicating with
  # external systems (federation, remote storage, Alertmanager).


# A scrape configuration containing exactly one endpoint to scrape:
# Here it's Prometheus itself.
  # The job name is added as a label `job=<job_name>` to any timeseries scraped

#Alartmanager
alerting:
  alertmanagers:
    - static_configs:
        - targets: ["localhost:9093"]

rule_files:
  - alert.rules.yml

    # Override the global default and scrape targets from this job every 5 seconds.

scrape_configs:
  # The job name is added as a label `job=<job_name>` to any timeseries scraped from this config.
 
  - job_name: 'monitoring'
    scrape_interval: 5s
    static_configs:
     - targets: ['localhost:9100']

  - job_name: "sarkisyanweb"
    scrape_interval: 5s
    static_configs:
     - targets: ["sarkisyanweb:9100"]

  - job_name: "db1"
    scrape_interval: 5s
    static_configs:
     - targets: ["database-0:9100"]

  - job_name: "db2"
    scrape_interval: 5s
    static_configs:
     - targets: ["database-1:9100"]

  - job_name: "wp"
    scrape_interval: 5s
    static_configs:
     - targets: ["app.sarkisyanweb.ru:9100"]

  - job_name: "gitlab"
    scrape_interval: 5s
    static_configs:
     - targets: ["gitlab.sarkisyanweb.ru:9100"]

  - job_name: "runner"
    scrape_interval: 5s
    static_configs:
     - targets: ["runner.sarkisyanweb.ru:9100"]

  - job_name: "mysql"
    scrape_interval: 5s
    static_configs:
     - targets: ["database-0:9104"]
